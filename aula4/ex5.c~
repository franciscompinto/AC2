#include <detpic32.h>


void delay();


int main(void){
	static unsigned char  7seg[] = {0x77,0x41,0x3B,0x6B,0x4D,0x6E,0x7E,0x43,0x7F,0x6F,0x5F,0x7C,0x38,0x79,0x3E,0x1E};
	TRISB=TRISB & 0xFC00;
	LATBbits.LATB8 = 1;
	LATBbits.LATB9 = 0;
	int i;	

	while(1){
	
		LATB=(LATB & 0xFC00) | 0x0200;
			
		for(i=0;i<16; i++){
			LATB=LATB | 7seg[i];
			delay(100);

		}
		
	}
	

}

void delay(unsigned int n_intervals)
{
	volatile unsigned int i;
	for(; n_intervals != 0; n_intervals--)
		for(i = 10000; i != 0; i--)
		;
	;
}




